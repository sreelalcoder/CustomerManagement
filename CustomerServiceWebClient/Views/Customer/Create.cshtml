@using CustomerServiceWebClient.Models.DTOs
@model CustomerDto
<a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Back</a>
<h2>Create Customer</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        @* <input asp-for="PhoneNumber" class="form-control" pattern="^\+?[1-9]\d{1,14}$" title="Enter a valid phone number, e.g., +1234567890"/> *@
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
